{
  "type": "component",
  "title": "Event Management",
  "action": {
    "type": "data",
    "method": "GET",
    "url": "/api/events"
  },
  "htmlStructure": [
    {
      "element": "div",
      "class": "d-flex flex-row flex-wrap gap-3",
      "children": [
        {
          "element": "div",
          "class": "col-md-4",
          "repeat": "data.events",
          "children": [
            {
              "element": "div",
              "class": "card bg-{{item.color}} shadow mb-4",
              "children": [
                {
                  "element": "div",
                  "class": "card-body",
                  "children": [
                    {
                      "element": "h5",
                      "text": "{{item.title}}",
                      "class": "card-title"
                    },
                    {
                      "element": "p",
                      "text": "üìÖ {{item.date}} | üïí {{item.time}}",
                      "class": "card-text"
                    },
                    {
                      "element": "p",
                      "text": "üìç {{item.venue}}",
                      "class": "card-text"
                    },
                    {
                      "element": "button",
                      "text": "View Details",
                      "class": "btn btn-light btn-sm mt-2",
                      "action": {
                        "type": "navigate",
                        "route": "/events/{{item.id}}"
                      }
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}