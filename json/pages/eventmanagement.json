{
  "type": "component",
  "title": "Event Management",
  "action": {
    "type": "data",
    "method": "GET",
    "url": "/api/events"
  },
  "htmlStructure": [
    {
      "element": "div",
      "class": "container mt-4",
      "children": [
        {
          "element": "div",
          "class": "d-flex justify-content-between align-items-center mb-4",
          "children": [
            {
              "element": "h3",
              "text": "Upcoming Events",
              "class": "mb-0"
            },
            {
              "element": "button",
              "text": "‚ûï Add New Event",
              "class": "btn btn-primary",
              "visibleForAdmin": true,
              "action": {
                "type": "openModal",
                "modalId": "addEvent",
                "title" : "Add Event"
            }
            }
          ]
        },
        {
          "element": "div",
          "class": "row",
          "repeat": "data.events",
          "children": [
            {
              "element": "div",
              "class": "col-md-4 mb-4",
              "children": [
                {
                  "element": "div",
                  "class": "card shadow",
                  "children": [
                    {
                      "element": "div",
                      "class": "card-body",
                      "children": [
                        {
                          "element": "h5",
                          "text": "{{item.title}}",
                          "class": "card-title"
                        },
                        {
                          "element": "p",
                          "text": "üìÖ {{item.date}} | üïí {{item.time}}",
                          "class": "card-text"
                        },
                        {
                          "element": "p",
                          "text": "üìç {{item.venue}}",
                          "class": "card-text"
                        },
                        {
                          "element": "button",
                          "text": "View Details",
                          "class": "btn btn-primary btn-sm mt-2",
                          "action": {
                            "type": "navigate",
                            "route": "/events/{{item.id}}"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}